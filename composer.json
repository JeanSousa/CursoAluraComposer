{
    "name": "jeansousa/buscador-cursos",
    "description": "Projeto que busca os cursos no projeto da alura",
    "type": "library",
    "authors": [
        {
            "name": "JeanSousa",
            "email": "jeanjr.silvasousa@gmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^6.5",
        "symfony/dom-crawler": "^4.2",
        "symfony/css-selector": "^5.4"
    },
    "autoload": {
        "files" : [
           "./functions.php"
        ],
        "psr-4": { 
            "Alura\\BuscadorDeCursos\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phan/phan": "^5.3"
    },
    "scripts": {
       "test": "phpunit tests/TestBuscadorDeCursos.php",
       "cs": "phpcs --standard=PSR12 src/",
       "phan": "phan --color --allow-polyfill-parser",
       "limpa-cache": "rm -rf cache",
       "check": [
           "@phan",
           "@cs",
           "@test"
       ]
    },
    "scripts-descriptions": {
        "check": "Executa as verificações do codigo. PHAN, PHPCS e PHPUNIT"
    }
}
